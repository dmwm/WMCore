		   </select><br/>

#end def 

#def configBlock($radioName, $scenarioName, $cacheName, $type)
Configuration <br>
  <input type="radio" name=$radioName value="scenario" /> Scenario
    <select name="Scenario">
      <option selected> pp</option>
      <option>cosmics</option>
      <option>hcalnzs</option>
